{
    "name": "skills-matrix-api-graphql",
    "version": "1.0.0",
    "description": "Skills matrix application GraphQL web api",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm run clean && tsc -p tsconfig-build.json",
        "clean": "rm -rf dist",
        "compile": "tsc -p tsconfig.json",
        "lint": "tslint -e 'node_modules/**' -p .",
        "lint:fix": "tslint -e 'node_modules/**' -p . --fix",
        "prettier": "prettier --list-different \"src/**/*.ts\"",
        "prettier:fix": "prettier --write \"src/**/*.ts\"",
        "start": "node dist/src/index.js",
        "start:dev": "nodemon --exec ts-node src/index.ts",
        "test": "cucumber-js --require-module ts-node/register --require features/step_definitions/*.step.ts features/*.feature"
    },
    "author": "Carles Capellas <capellas.carles@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "express": "4.17.1",
        "express-graphql": "0.9.0",
        "graphql": "14.5.7",
        "jsonwebtoken": "8.5.1",
        "pg": "7.12.1"
    },
    "devDependencies": {
        "@types/chai": "4.2.4",
        "@types/cucumber": "6.0.0",
        "@types/express": "4.17.2",
        "@types/jsonwebtoken": "8.3.5",
        "@types/pg": "7.11.2",
        "alasql": "0.5.1",
        "chai": "4.2.0",
        "cucumber": "6.0.2",
        "husky": "3.0.9",
        "nodemon": "1.19.2",
        "prettier": "1.18.2",
        "ts-node": "8.4.1",
        "tslint": "5.20.1",
        "tslint-config-prettier": "1.18.0",
        "typescript": "3.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run prettier",
            "pre-push": "npm test"
        }
    }
}
