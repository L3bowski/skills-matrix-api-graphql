{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["dom", "es2017", "esnext.asynciterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "target": "es2015"
    },
    "include": ["src", "features"]
}
